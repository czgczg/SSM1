<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
    <properties resource="dbcpconfig.properties"/>
    <!--给bean类下所有类取别名,结果集可以直接用小写表示-->
    <typeAliases>
        <package name="com.cskaoyan.bean"/>
    </typeAliases>
    <mappers>
        <!--扫描dao包下所有的接口，然后找到对应的接口的xml实现文件-->
        <package name="com.cskaoyan.dao"/>
    </mappers>
</configuration>